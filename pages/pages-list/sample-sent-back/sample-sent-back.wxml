<!--pages/pages-list/sample-sent-back/sample-sent-back.wxml-->
<view class="sample-sent-back">
  <search type="3"></search>
  <type-list 
    typeList="{{typeList}}" 
    typeIndex="{{typeIndex}}"
    bindtypeItemClick="typeItemClick">
  </type-list>
  <scroll-view class="scroll-view" scroll-y>
    <view class="list" hidden="{{list.length === 0}}">
      <view class="item flex-ali" wx:for="{{list}}" wx:key="id">
        <image hidden="{{typeIndex !==  0}}" src="{{$state.ASSETSURL}}sample-sent-back/0.png"></image>
        <view>
          <view class="bar-code">条形码  564654678</view>
          <view class="flex"> 
            <image class="sample-img" src="{{$state.ASSETSURL}}sample-sent-back/2.png"></image>
            <view class="position position{{typeIndex}}">
              <view class="sample-name">产品名称产品名称</view>
              <view class="button flex-ali-cen">{{typeIndex ===  0 ? '寄回' : '查看物流'}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <load-more loadMoreType="{{loadMoreType}}"></load-more>
    <view class="placeholder" hidden="{{typeIndex !== 0}}"></view>
  </scroll-view>
  <view hidden="{{typeIndex !== 0}}"><select-all-bottom></select-all-bottom></view>

  <show-pop show="{{show}}" position="bottom">
    <view class="logistics-pop">
      <image bindtap="shutDownPop" class="shut-down-img" src="{{$state.ASSETSURL}}sample-sent-back/4.png"></image>
      <view class="title">详情信息</view>
      <view class="content">
        <view class="flex-bet-ali courier">
          <view class="courier-company">中通快递 564897748987945</view>
          <view class="flex copy-call">
            <view>复制</view>
            <view class="line"></view>
            <view>打电话</view>
          </view>
        </view>
        <scroll-view class="scroll-view" scroll-y>
          <view class="list">
            <view class="item flex" wx:for="{{logisticsInfo}}" wx:key="id">
              <view class="progress-line" wx:if="{{index !== logisticsInfo.length-1}}"></view>
              <view class="circle flex-cen">
                <view class="circle{{item.type}}"></view>
              </view>
              <view>
                <view>
                  <text class="status">已收货</text>
                  <text class="time">06-24 12:31</text>
                </view>
                <view class="describe">包裹正在等待揽收</view>
              </view>
            </view>
          </view>
        </scroll-view>
        <view class="leave-info flex-ali">
          <image src="{{$state.ASSETSURL}}sample-sent-back/3.png"></image>
          <view>张小伟，156****9878，湖南省 长沙市 开福区 麓园街道 望麓园街道香春路113号</view>
        </view>
      </view>
    </view>
  </show-pop>
</view>
